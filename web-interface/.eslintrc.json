{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
    },
    "overrides": [
        {
            "files": ["*"],
            "rules": {
                "indent": "off",
                "padded-blocks": "off",
                "react/prop-types": "off",
                "react/no-deprecated": "off",
                "quotes": "off",
                "semi": "off",
                "object-curly-spacing": "off",
                "space-before-function-paren": "off",
                "eol-last": "off",
                "no-trailing-spaces": "off",
                "react/jsx-no-target-blank": "off",
                "multiline-ternary": "off",
                "dot-notation": "off",
                "space-infix-ops": "off",
                "key-spacing": "off",
                "operator-linebreak": "off"
            }
        }
   ],
    "settings": {
        "react": {
            "version": "detect"
          }
    }
}
